{
  "name": "Python - Doc Summarizer",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",
  "features": {
    "azure-cli": {
      "version": "latest"
    },
    "ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools:1": {
      "version": "latest"
    }
  },
  "forwardPorts": ["7071"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "github.copilot",
        "github.copilot-chat",
        "azurite.azurite",
        "humao.rest-client",
        "donjayamanne.python-extension-pack",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-powertoys"
      ]
    }
  },
  "containerUser": "vscode"
}
